<UserControl x:Class="OOP_Semester.Views.ChallengeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:OOP_Semester.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#F8F9FA" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#EE7C2B"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#FFF0E0"/>
        <SolidColorBrush x:Key="TextMain" Color="#1B130D"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="5" Opacity="0.08" Color="Black" Direction="270"/>

        <Style x:Key="BigCheckBox" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Bd" Width="28" Height="28" CornerRadius="14" BorderBrush="#D1D5DB" BorderThickness="2" Background="White">
                                <Path x:Name="CheckMark" Data="M6,14 L10,18 L22,6" Stroke="White" StrokeThickness="3" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#10B981"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#10B981"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,40">
                <TextBlock Text="Khám phá thử thách mới" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,0,15"/>

                <ItemsControl ItemsSource="{Binding AvailableChallenges}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="12" Width="260" Margin="0,0,20,20" Padding="15" Effect="{StaticResource CardShadow}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <Border Background="#F3F4F6" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding DaysLeftText}" FontSize="11" Foreground="#6B7280"/>
                                        </Border>
                                        <TextBlock Text="{Binding Model.RewardCoins, StringFormat='🏆 {0}'}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Right"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Model.Title}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" MaxHeight="44" TextTrimming="CharacterEllipsis"/>
                                    <Button Command="{Binding DataContext.JoinCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"
                                            Content="Tham gia" Margin="0,15,0,0" Height="32"
                                            Background="White" BorderBrush="{StaticResource Primary}" BorderThickness="1" Foreground="{StaticResource Primary}" FontWeight="Bold" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="16">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Đang thực hiện 🔥" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,0,15"/>

                    <Border Background="White" CornerRadius="16" Padding="40" Effect="{StaticResource CardShadow}" MinHeight="300"
                            Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVis}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="🛌" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="Chưa có thử thách nào." FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextMain}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource PrimaryLight}" CornerRadius="20" Effect="{StaticResource CardShadow}"
                            Visibility="{Binding HasActiveChallenge, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="30">
                                <StackPanel>
                                    <Grid>
                                        <StackPanel HorizontalAlignment="Left">
                                            <Border Background="White" CornerRadius="8" Padding="10,4" HorizontalAlignment="Left" Margin="0,0,0,10">
                                                <TextBlock Text="{Binding CurrentChallenge.DaysLeftText}" Foreground="{StaticResource Primary}" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding CurrentChallenge.Model.Title}" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextMain}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentChallenge.Progress, StringFormat='{}{0:0}%'}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource Primary}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="{Binding CurrentChallenge.Model.Description}" FontSize="16" Foreground="#555" Margin="0,15,0,25" TextWrapping="Wrap"/>

                                    <Grid Height="16">
                                        <Border CornerRadius="8" Background="White"/>
                                        <ProgressBar Value="{Binding CurrentChallenge.Progress}" Maximum="100" BorderThickness="0" Background="Transparent" Foreground="{StaticResource Primary}">
                                            <ProgressBar.Clip>
                                                <RectangleGeometry Rect="0,0,2000,16" RadiusX="8" RadiusY="8"/>
                                            </ProgressBar.Clip>
                                        </ProgressBar>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Background="White" CornerRadius="0,0,20,20" Padding="30">
                                <StackPanel>
                                    <TextBlock Text="Nhiệm vụ hôm nay" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                                    <ItemsControl ItemsSource="{Binding CurrentTasks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,15">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsCompleted, Mode=TwoWay}" Style="{StaticResource BigCheckBox}" VerticalAlignment="Center"
                                                                  Command="{Binding DataContext.CheckInCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>

                                                        <StackPanel Grid.Column="1" Margin="20,0">
                                                            <TextBlock Text="{Binding Model.Description}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding Model.DailySession}" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Khác" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,0,15"
                               Visibility="{Binding OtherJoinedChallenges.Count, Converter={StaticResource BoolToVis}}"/>

                    <ItemsControl ItemsSource="{Binding OtherJoinedChallenges}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectChallengeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,0,15" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="White" CornerRadius="12" Padding="15" Effect="{StaticResource CardShadow}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Margin="0,0,0,10">
                                                        <TextBlock Text="{Binding Model.Title}" FontSize="15" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding DaysLeftText}" FontSize="12" Foreground="{StaticResource Primary}"/>
                                                    </StackPanel>

                                                    <ProgressBar Grid.Row="1" Value="{Binding Progress}" Maximum="100" Height="6" Background="#F3F4F6" Foreground="{StaticResource Primary}" BorderThickness="0"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
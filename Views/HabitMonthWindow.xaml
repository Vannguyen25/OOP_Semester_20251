<Window x:Class="OOP_Semester.Views.HabitMonthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Lịch chi tiết"
        Width="420" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#F7F9FC">

    <Window.Resources>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="#2D3748"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#718096"/>
        <SolidColorBrush x:Key="BorderSoftBrush" Color="#E2E8F0"/>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoftBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="15" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource CardBorderStyle}" Margin="20" Padding="20">
        <StackPanel>

            <DockPanel Margin="0,0,0,20">
                <TextBlock Text="{Binding MonthTitle}"
                           FontWeight="Bold"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextMainBrush}"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Width="32" Height="32"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderSoftBrush}"
                            BorderThickness="1"
                            Cursor="Hand"
                            Command="{Binding PrevMonthCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="16"/>
                            </Style>
                        </Button.Resources>
                        <TextBlock Text="‹" FontSize="18" FontWeight="Bold" Margin="0,-2,0,0"/>
                    </Button>

                    <Button Width="32" Height="32" Margin="10,0,0,0"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderSoftBrush}"
                            BorderThickness="1"
                            Cursor="Hand"
                            Command="{Binding NextMonthCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="16"/>
                            </Style>
                        </Button.Resources>
                        <TextBlock Text="›" FontSize="18" FontWeight="Bold" Margin="0,-2,0,0"/>
                    </Button>
                </StackPanel>
            </DockPanel>

            <UniformGrid Columns="7" Margin="0,0,0,10">
                <TextBlock Text="T2" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="T3" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="T4" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="T5" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="T6" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="T7" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="CN" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
            </UniformGrid>

            <ItemsControl ItemsSource="{Binding Days}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="40" Height="40" Margin="2">
                            <Border CornerRadius="20"
                                    BorderBrush="{Binding HighlightBorder}"
                                    BorderThickness="1.5"
                                    Background="{Binding HighlightBackground}"/>

                            <TextBlock Text="{Binding DayNumber}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{Binding Foreground}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Border Width="10" Height="10" CornerRadius="5" Background="Orange" Opacity="0.5" Margin="0,0,5,0"/>
                <TextBlock Text="Đạt" FontSize="12" Margin="0,0,15,0" Foreground="{StaticResource TextSecondaryBrush}"/>

                <Border Width="10" Height="10" CornerRadius="5" Background="#FEE2E2" BorderBrush="Red" BorderThickness="1" Margin="0,0,5,0"/>
                <TextBlock Text="Thiếu" FontSize="12" Margin="0,0,15,0" Foreground="{StaticResource TextSecondaryBrush}"/>

                <Border Width="10" Height="10" CornerRadius="5" Background="#F3F4F6" Margin="0,0,5,0"/>
                <TextBlock Text="Bỏ qua" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
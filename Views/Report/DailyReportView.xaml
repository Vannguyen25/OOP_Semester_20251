<UserControl x:Class="OOP_Semester.Views.Report.DailyReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" FontFamily="Segoe UI">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="1" Opacity="0.05" Color="Black"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                <Button x:Name="PART_Button" Grid.Column="1" Content="📅" Background="Transparent" BorderThickness="0" Foreground="#EE7C2B" Cursor="Hand"/>
                                <Popup x:Name="PART_Popup" AllowsTransparency="True" Placement="Bottom" StaysOpen="False"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-20,0,0,0">
            <Border Margin="20" MaxWidth="900" Height="358" Width="728">
                <StackPanel>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker SelectedDate="{Binding SelectedDate}" Grid.Column="0" VerticalAlignment="Bottom"/>

                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="15,10" Margin="0,0,10,0" Effect="{StaticResource CardShadow}">
                            <StackPanel>
                                <TextBlock Text="Tổng" FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding TotalHabits}" FontSize="22" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="3" Background="#DCFCE7" CornerRadius="12" Padding="15,10" Margin="0,0,10,0" Effect="{StaticResource CardShadow}">
                            <StackPanel>
                                <TextBlock Text="Xong" FontSize="11" Foreground="#10B981"/>
                                <TextBlock Text="{Binding CompletedCount}" FontSize="22" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="4" Background="#FEF3C7" CornerRadius="12" Padding="15,10" Effect="{StaticResource CardShadow}">
                            <StackPanel>
                                <TextBlock Text="Chờ" FontSize="11" Foreground="#F59E0B"/>
                                <TextBlock Text="{Binding PendingCount}" FontSize="22" FontWeight="Bold" Foreground="#F59E0B"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Background="White" CornerRadius="15" Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <Border Background="#F9FAFB" CornerRadius="15,15,0,0" Padding="20,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="THÓI QUEN" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11"/>
                                    <TextBlock Text="TIẾN ĐỘ" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="2"/>
                                    <TextBlock Text="TRẠNG THÁI" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="3" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <ItemsControl ItemsSource="{Binding DailyLogs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" 
                                                Padding="20,15" Background="Transparent" Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                              Command="{Binding DataContext.OpenHabitHistoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Habit.Icon}" Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding Habit.Name}" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Log.TimeOfDay}" Grid.Column="1" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                                                <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}" Grid.Column="2" Height="6" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                                <Border Grid.Column="3" Background="{Binding StatusBg}" CornerRadius="10" Padding="10,2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Margin="0,25,0,0" Background="#FFF7ED" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🐾" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Lời nhắn từ Pet" FontWeight="Bold" Foreground="#C2410C"/>
                                <TextBlock Text="Hôm nay bạn đã làm rất tốt, tiếp tục phát huy nhé!" Foreground="#9A3412"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding OverallProgress, StringFormat='{}{0:0}% Hoàn thành'}" FontWeight="Bold" Foreground="#EA580C" HorizontalAlignment="Right"/>
                                <ProgressBar Value="{Binding OverallProgress}" Height="6" Foreground="#EA580C" Background="White" BorderThickness="0" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
            
        
        
    </Grid>
</UserControl>
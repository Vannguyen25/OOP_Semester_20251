<UserControl x:Class="OOP_Semester.Views.Report.AdUserReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F9FAFB" FontFamily="Segoe UI">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="1" Opacity="0.05" Color="Black"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Thống Kê Người Dùng" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Phân tích tăng trưởng và quản lý danh sách thành viên hệ thống." Foreground="#6B7280" Margin="0,5,0,25"/>

            <UniformGrid Columns="3" Margin="0,0,0,25">
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,15,0" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="👥 TỔNG NGƯỜI DÙNG" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding TotalUsers}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,15,0" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="🆕 THÀNH VIÊN MỚI (THÁNG)" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding NewUsersThisMonth}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="16" Padding="20" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="📈 TỶ LỆ TĂNG TRƯỞNG" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding GrowthRate, StringFormat='{}{0:+#0.0;-#0.0;0}%'}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Background="White" CornerRadius="16" Padding="25" Margin="0,0,0,25" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Tăng trưởng người dùng mới (6 tháng gần nhất)" FontWeight="Bold" FontSize="14" Foreground="#374151" Margin="0,0,0,30"/>
                    <Grid Height="200">
                        <ItemsControl ItemsSource="{Binding MonthlyGrowth}" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Bottom" Margin="20,0">
                                        <TextBlock Text="{Binding UserCount}" HorizontalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="#EA580C" Margin="0,0,0,5"/>
                                        <Border Width="35" Height="{Binding BarHeight}" Background="#EA580C" CornerRadius="6,6,0,0" Cursor="Hand">
                                            <Border.ToolTip>
                                                <ToolTip Content="{Binding UserCount, StringFormat='{}Số lượng: {0}'}"/>
                                            </Border.ToolTip>
                                        </Border>
                                        <TextBlock Text="{Binding MonthName}" HorizontalAlignment="Center" FontSize="10" Foreground="#9CA3AF" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="16" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <Border Background="#F9FAFB" CornerRadius="16,16,0,0" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="TÊN ĐĂNG NHẬP" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11"/>
                            <TextBlock Text="TÊN TÀI KHOẢN" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="1"/>
                            <TextBlock Text="NGÀY THAM GIA" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="2"/>
                            <TextBlock Text="SỐ DƯ VÀNG" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="3" HorizontalAlignment="Right"/>
                            <TextBlock Text="QUYỀN" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="4" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <ItemsControl ItemsSource="{Binding RecentUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="20,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Username}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding CreatedAt}" Grid.Column="2" VerticalAlignment="Center" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding GoldBalance, StringFormat='{}{0:N0}'}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#EA580C" FontWeight="Bold"/>
                                        <Border Grid.Column="4" Background="#F3F4F6" CornerRadius="8" Padding="8,2" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Role}" FontSize="10" FontWeight="Bold" Foreground="#4B5563"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="OOP_Semester.Views.Report.AdChallengeReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F9FAFB" FontFamily="Segoe UI">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="15" ShadowDepth="1" Opacity="0.05" Color="Black"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Báo Cáo Thử Thách" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="Theo dõi tiến độ và mức độ hoàn thành các thử thách." Foreground="#6B7280" Margin="0,5,0,25"/>

            <UniformGrid Columns="3" Margin="0,0,0,25">
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,15,0" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="🚩 THỬ THÁCH CÒN HẠN" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding ActiveChallenges}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="16" Padding="20" Margin="0,0,15,0" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="👤 TỔNG NGƯỜI THAM GIA" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding TotalParticipants}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="16" Padding="20" Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="✅ TỶ LỆ HOÀN THÀNH CÁC THỬ THÁCH" Foreground="#EA580C" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding OverallCompletionRate, StringFormat='{}{0:0}%'}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Background="White" CornerRadius="16" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <Border Background="#F9FAFB" CornerRadius="16,16,0,0" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="TÊN THỬ THÁCH" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11"/>
                            <TextBlock Text="THỜI GIAN" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="1"/>
                            <TextBlock Text="NGƯỜI THAM GIA" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="2" HorizontalAlignment="Center"/>
                            <TextBlock Text="TIẾN ĐỘ TB" FontWeight="Bold" Foreground="#9CA3AF" FontSize="11" Grid.Column="3" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ItemsControl ItemsSource="{Binding ChallengeItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F3F4F6" BorderThickness="0,0,0,1" Padding="20,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding TimePeriod}" Grid.Column="1" VerticalAlignment="Center" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding ParticipantCount}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                        <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding AvgProgress, StringFormat='{}{0:0}%'}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <ProgressBar Value="{Binding AvgProgress}" Height="4" Width="80" Margin="0,5,0,0" Foreground="#EA580C" Background="#F1F5F9" BorderThickness="0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
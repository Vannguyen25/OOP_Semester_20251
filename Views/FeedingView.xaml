<UserControl x:Class="OOP_Semester.Views.FeedingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OOP_Semester.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             FontFamily="Segoe UI" Background="#fcfaf8">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#f48c25"/>
        <SolidColorBrush x:Key="TextMain" Color="#1c140d"/>
        <SolidColorBrush x:Key="TextSub" Color="#9c7349"/>
        <SolidColorBrush x:Key="BorderColor" Color="#e8dbce"/>
        <SolidColorBrush x:Key="Surface" Color="#ffffff"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DataTemplate x:Key="FoodItemTemplate">
            <Border Background="#fcfaf8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" 
                    CornerRadius="12" Padding="12" Margin="0,0,12,12" 
                    Width="210" Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Background" Value="#FFF8E1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <Image Source="{Binding Food.ImagePath}" Stretch="Uniform" Margin="4"/>
                        </Border>
                        <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FFF3E0" CornerRadius="6" Padding="6,2">
                            <TextBlock FontSize="11" FontWeight="Bold" Foreground="{StaticResource Primary}">
                                <Run Text="+"/>
                                <Run Text="{Binding Food.ExperiencePerUnit}"/>
                                <Run Text=" XP"/>
                            </TextBlock>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="{Binding Food.Name}" FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextMain}" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Food.Description}" FontSize="12" Foreground="{StaticResource TextSub}" TextTrimming="CharacterEllipsis" MaxHeight="34" Margin="0,2,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="2" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Margin="0,12,0,0" Padding="0,8,0,0">
                        <DockPanel>
                            <TextBlock Text="Đang có:" FontSize="12" Foreground="{StaticResource TextSub}"/>
                            <TextBlock Text="{Binding Quantity}" DockPanel.Dock="Right" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextMain}"/>
                        </DockPanel>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,10,0" Margin="0,0,47,0">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Cho Thú cưng ăn" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextMain}"/>
                        <TextBlock Text="Chọn thức ăn từ kho để giúp thú cưng lớn nhanh hơn." FontSize="15" Foreground="{StaticResource TextSub}" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                </DockPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" VerticalAlignment="Top">
                        <StackPanel>
                            <Grid Height="300" Background="#FFF8F2">
                                <Grid.Clip>
                                    <RectangleGeometry Rect="0,0,320,300" RadiusX="16" RadiusY="16"/>
                                </Grid.Clip>

                                <Image Source="{Binding PetAvatar}" 
                                   Stretch="UniformToFill" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>

                                <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="16" Background="White" CornerRadius="12" Padding="8,4" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                    <TextBlock FontSize="12" FontWeight="Bold">
                                        <Run Text="Lv. "/><Run Text="{Binding CurrentPet.Level}"/>
                                    </TextBlock>
                                </Border>

                                <Button Content="🔄 Đổi Pet" Command="{Binding OpenChangePetCommand}"
                                            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"
                                            Background="#FFFFFF" Foreground="{StaticResource TextSub}" BorderThickness="1" BorderBrush="{StaticResource BorderColor}"
                                            Padding="8,4" FontSize="11" FontWeight="SemiBold" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>

                            <Border Padding="20">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,16">
                                        <TextBlock Text="{Binding CurrentPet.Name}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextMain}"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="15,0,6,0"/>
                                            <TextBlock Text="Online" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSub}"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <DockPanel Grid.Row="0" Margin="0,0,0,6">
                                            <TextBlock Text="Kinh nghiệm  " FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextSub}"/>
                                            <TextBlock DockPanel.Dock="Right" 
                                               Text="{Binding ExpDisplay}" 
                                               FontSize="12" FontWeight="Bold" Foreground="{StaticResource Primary}"/>          
                                        </DockPanel>

                                        <ProgressBar Grid.Row="1" Value="{Binding CurrentPet.Experience}" Maximum="{Binding MaxExp}" Height="8" 
                                                     Foreground="{StaticResource Primary}" Background="#F0E6DD" BorderThickness="0"/>

                                        <TextBlock Grid.Row="2" Text="Sắp thăng cấp!" FontSize="11" Foreground="#999" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                    </Grid>

                                    <UniformGrid Columns="2" Rows="1">
                                        <Border Background="#fcfaf8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12" Padding="12" Margin="0,0,6,0">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="🍖" FontSize="20" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Đói" FontSize="11" Foreground="{StaticResource TextSub}" HorizontalAlignment="Center"/>
                                                <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" HorizontalAlignment="Center">
                                                    <Run Text="{Binding Hunger}"/><Run Text="%"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#fcfaf8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12" Padding="12" Margin="6,0,0,0">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="🥰" FontSize="20" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Vui" FontSize="11" Foreground="{StaticResource TextSub}" HorizontalAlignment="Center"/>
                                                <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" HorizontalAlignment="Center">
                                                    <Run Text="{Binding Happiness}"/><Run Text="%"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </UniformGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="24,16">
                                    <DockPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📦" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Kho thức ăn" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Border DockPanel.Dock="Right" Background="#f4ede7" CornerRadius="12" Padding="10,4">
                                            <TextBlock FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextSub}">
                                                <Run Text="{Binding UserFoods.Count, Mode=OneWay, FallbackValue=0}"/>
                                                <Run Text=" loại"/>
                                            </TextBlock>
                                        </Border>
                                    </DockPanel>
                                </Border>

                                <ListBox Grid.Row="1" ItemsSource="{Binding UserFoods}" SelectedItem="{Binding SelectedFood}" 
                                 ItemTemplate="{StaticResource FoodItemTemplate}"
                                 Height="362" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 BorderThickness="0" Background="Transparent" Padding="10">     
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel IsItemsHost="True" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="ĐANG CHỌN" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSub}" Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedFood.Food.Name, TargetNullValue='Chưa chọn món'}" FontSize="22" FontWeight="Black" Foreground="{StaticResource TextMain}"/>
                                        <Border Width="1" Height="20" Background="{StaticResource BorderColor}" Margin="12,0"/>
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Primary}" VerticalAlignment="Center">
                                            <Run Text="+"/><Run Text="{Binding SelectedFood.Food.ExperiencePerUnit, TargetNullValue='0'}"/><Run Text=" XP"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Column="1" Background="#fcfaf8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12" Padding="4" Margin="24,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="-" Command="{Binding DecreaseQuantityCommand}" Width="36" Height="36" Background="White" BorderThickness="0" FontWeight="Bold" FontSize="18" Foreground="{StaticResource TextSub}">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <TextBlock Text="{Binding FeedingQuantity}" Width="40" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="18"/>

                                        <Button Content="+" Command="{Binding IncreaseQuantityCommand}" Width="36" Height="36" Background="White" BorderThickness="0" FontWeight="Bold" FontSize="18" Foreground="{StaticResource TextSub}">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <Button Grid.Column="2" Command="{Binding FeedPetCommand}"
                                        Content="Cho ăn 🐾" FontSize="16" FontWeight="Bold" Foreground="White"
                                        Background="{StaticResource Primary}" BorderThickness="0" 
                                        Width="160" Height="50" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="12"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid Visibility="{Binding IsChangePetVisible, Converter={StaticResource BoolToVis}}" Background="#99000000" d:IsHidden="True">
            <Border Width="500" Height="400" Background="White" CornerRadius="16" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Chọn ngoại hình Pet mới" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding AvailablePetTypes}" BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" Padding="10" CornerRadius="8" Background="#F9F9F9" BorderBrush="#EEE" BorderThickness="1" Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.SelectPetTypeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding AppearanceWhenHappy}" Width="50" Height="50"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock Text="Level tương đương" Foreground="Gray" FontSize="12" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2" Content="Đóng" Command="{Binding CloseChangePetCommand}" 
                            HorizontalAlignment="Right" Width="100" Margin="0,20,0,0"
                            Background="{StaticResource Primary}" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            BorderThickness="0" 
                            Cursor="Hand"
                            Padding="10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
<UserControl x:Class="OOP_Semester.Views.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200"
             FontFamily="Segoe UI" Background="#fcfaf8">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#f48c25"/>
        <SolidColorBrush x:Key="TextMain" Color="#1c140d"/>
        <SolidColorBrush x:Key="TextSub" Color="#9c7349"/>
        <SolidColorBrush x:Key="TextGray" Color="#6b7280"/>
        <SolidColorBrush x:Key="BorderColor" Color="#e8dbce"/>
        <SolidColorBrush x:Key="Surface" Color="#ffffff"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QtyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f3f4f6"/>
                                <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProductItemTemplate">
            <Border Width="280" Margin="0,0,24,24">
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAffordable}" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,280,200" RadiusX="16" RadiusY="16"/>
                        </Grid.Clip>
                        <Border Background="#FFF8F2"/>

                        <Image Source="{Binding ImagePath}" Stretch="Uniform" Margin="16"/>

                        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12"
                                Background="White" CornerRadius="8" Padding="8,4" 
                                BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" Foreground="{StaticResource Primary}" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock FontWeight="Bold" Foreground="{StaticResource Primary}" FontSize="12">
                                    <Run Text="+"/>
                                    <Run Text="{Binding ExpGain, Mode=OneWay}"/>
                                    <Run Text=" XP"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="12"
                                Background="{StaticResource Primary}" CornerRadius="8" Padding="8,4"
                                Visibility="{Binding IsBestSeller, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="HOT 🔥" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                    </Grid>

                    <Border Grid.Row="1" Padding="16">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Text="{Binding Description}" FontSize="13" Foreground="{StaticResource TextSub}" 
                                       TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis" Margin="0,4,0,16"
                                       Opacity="0.8"/>

                            <DockPanel Margin="0,0,0,16">
                                <TextBlock Text="GIÁ BÁN" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextGray}" VerticalAlignment="Center"/>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N0}}" FontSize="20" FontWeight="Black" Foreground="{StaticResource Primary}"/>
                                    <TextBlock Text=" 💰" FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DockPanel>

                            <Grid Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="10" Background="#fcfaf8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="32"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="-" Style="{StaticResource QtyButtonStyle}" Command="{Binding DecreaseQuantityCommand}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding QuantityToBuy}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextMain}"/>
                                        <Button Grid.Column="2" Content="+" Style="{StaticResource QtyButtonStyle}" Command="{Binding IncreaseQuantityCommand}"/>
                                    </Grid>
                                </Border>

                                <Button Grid.Column="2" Command="{Binding BuyCommand}"
                                        Content="MUA NGAY"
                                        Background="{StaticResource Primary}" Foreground="White"
                                        FontWeight="Bold" FontSize="13" BorderThickness="0" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40">

            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Cửa hàng thức ăn" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextMain}"/>
                <TextBlock Text="Dùng vàng tích lũy để mua thức ăn giúp thú cưng lớn nhanh hơn." 
                           FontSize="16" Foreground="{StaticResource TextSub}" Margin="0,8,0,0"/>
            </StackPanel>

            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="24">
                    <DockPanel>
                        <Border DockPanel.Dock="Right" Width="56" Height="56" CornerRadius="28" Background="{StaticResource Primary}">
                            <TextBlock Text="💰" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Vàng hiện có" FontSize="14" Foreground="{StaticResource TextGray}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentUser.GoldAmount, StringFormat={}{0:N0}}" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextMain}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="0,0,0,16">
                            <Border DockPanel.Dock="Right" Width="48" Height="48" CornerRadius="24" Background="{StaticResource Primary}">
                                <TextBlock Text="📈" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Cấp độ hiện tại" FontSize="14" Foreground="{StaticResource TextGray}" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock FontWeight="Black" FontSize="24" Foreground="{StaticResource TextMain}">
                                        <Run Text="Lv."/><Run Text="{Binding CurrentPet.Level}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="16" Foreground="{StaticResource TextSub}" VerticalAlignment="Bottom" Margin="12,0,0,4" FontWeight="SemiBold">
                                        <Run Text="{Binding CurrentPet.Experience}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding MaxExp}"/>
                                        <Run Text=" EXP"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>

                        <Grid Grid.Row="1">
                            <ProgressBar Height="12" Value="{Binding CurrentPet.Experience}" Maximum="{Binding MaxExp}" 
                                         Background="#F3F4F6" Foreground="{StaticResource Primary}" BorderThickness="0"/>
                            <Grid.Clip>
                                <RectangleGeometry Rect="0,0,800,12" RadiusX="6" RadiusY="6"/>
                            </Grid.Clip>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <ItemsControl ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <StaticResource ResourceKey="ProductItemTemplate"/>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>